"use client";

import { useState, useEffect } from 'react';
import { Send, Camera, Heart, MessageCircle, Repeat2, Bookmark, MoreHorizontal, User, Globe, Search, Mail, Bell, Home, Link as LinkIcon } from 'lucide-react';

export default function BilpchatPage() {
  const [posts, setPosts] = useState([
    {
      id: 1,
      username: 'fizz.vai',
      handle: '@fizz.vai',
      avatar: 'https://placehold.co/40x40/4f46e5/ffffff?text=FV',
