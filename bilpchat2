      liked: false,
      reposted: false,
      url: 'https://blurt.blog'
    },
    {
      id: 4,
      username: 'traveler_23',
      handle: '@traveler_23',
      avatar: 'https://placehold.co/40x40/8b5cf6/ffffff?text=TR',
      verified: false,
      time: '4h',
      content: 'Just discovered this amazing platform called blurt.blog! Perfect for sharing my travel stories and connecting with fellow adventurers. The community here is so welcoming and supportive.',
      image: 'https://placehold.co/500x300/8b5cf6/ffffff?text=Mountain+View',
      likes: 67,
      comments: 12,
      reposts: 8,
      liked: false,
      reposted: false,
      url: 'https://blurt.blog'
    }
  ]);

  const [mounted, setMounted] = useState(false);
  const [isLoggedIn, setIsLoggedIn] = useState(false);

  useEffect(() => {
    setMounted(true);
    // Check if user is logged in (mock logic)
    const mockLoggedIn = typeof window !== 'undefined' && localStorage.getItem('bilpchat_user');
    setIsLoggedIn(mockLoggedIn);
  }, []);

  const toggleLike = (id) => {
    setPosts(posts.map(post => 
      post.id === id 
        ? { ...post, liked: !post.liked, likes: post.liked ? post.likes - 1 : post.likes + 1 }
        : post
    ));
  };

  const toggleRepost = (id) => {
    setPosts(posts.map(post => 
      post.id === id 
        ? { ...post, reposted: !post.reposted, reposts: post.reposted ? post.reposts - 1 : post.reposts + 1 }
        : post
    ));
  };

  const handleViewPost = (url) => {
    window.open(url, '_blank', 'noopener,noreferrer');
  };

  const handleLogin = () => {
    if (typeof window !== 'undefined') {
      localStorage.setItem('bilpchat_user', 'true');
      setIsLoggedIn(true);
    }
  };

  const handleLogout = () => {
    if (typeof window !== 'undefined') {
      localStorage.removeItem('bilpchat_user');
      setIsLoggedIn(false);
    }
  };

  if (!mounted) {
    return (
      <div className="flex min-h-screen items-center justify-center bg-gray-50">
        <div className="text-gray-600">Loading Bilpchat...</div>
      </div>
    );
  }

  return (
    <div className="min-h-screen bg-gray-50">
      {/* Header */}
      <header className="sticky top-0 z-40 bg-white border-b border-gray-200">
        <div className="max-w-6xl mx-auto px-4 py-3">
          <div className="flex items-center justify-between">
            <div className="flex items-center space-x-3">
              <div className="w-10 h-10 bg-gradient-to-r from-purple-600 to-pink-600 rounded-full flex items-center justify-center">
                <span className="text-white font-bold text-xl">B</span>
              </div>
              <h1 className="text-2xl font-bold bg-gradient-to-r from-purple-600 to-pink-600 bg-clip-text text-transparent">
                Bilpchat
              </h1>
            </div>
            <div className="flex-1 max-w-2xl mx-6">
              <div className="relative">
                <Search className="absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400 w-5 h-5" />
                <input
                  type="text"
                  placeholder="Search Bilpchat"
                  className="w-full bg-gray-100 rounded-full py-2 pl-10 pr-4 focus:outline-none focus:ring-2 focus:ring-purple-500"
                />
              </div>
            </div>
            <div className="flex items-center space-x-4">
              {isLoggedIn ? (
                <>
                  <button className="p-2 hover:bg-gray-100 rounded-full transition-colors">
                    <Home className="w-6 h-6 text-gray-700" />
                  </button>
                  <button className="p-2 hover:bg-gray-100 rounded-full transition-colors">
                    <Mail className="w-6 h-6 text-gray-700" />
                  </button>
                  <button className="p-2 hover:bg-gray-100 rounded-full transition-colors">
                    <Bell className="w-6 h-6 text-gray-700" />
                  </button>
                  <button 
                    onClick={handleLogout}
                    className="p-2 hover:bg-gray-100 rounded-full transition-colors"
                  >
                    <User className="w-6 h-6 text-gray-700" />
                  </button>
                </>
              ) : (
                <div className="flex items-center space-x-3">
                  <button
                    onClick={() => {
                      // Mock login
                      handleLogin();
                    }}
                    className="px-4 py-2 border border-purple-600 text-purple-600 rounded-full font-medium hover:bg-purple-50 transition-colors"
                  >
                    Login
                  </button>
                  <button
                    onClick={() => {
                      // Mock signup
                      handleLogin();
                    }}
                    className="px-4 py-2 bg-gradient-to-r from-purple-600 to-pink-600 text-white rounded-full font-medium hover:shadow-lg transition-all"
                  >
                    Sign Up
                  </button>
                </div>
              )}
            </div>
          </div>
        </div>
      </header>

      <div className="max-w-4xl mx-auto px-4 py-6">
        {/* Welcome Message */}
        <div className="bg-gradient-to-r from-purple-50 to-pink-50 border border-purple-200 rounded-2xl p-4 mb-6">
          <div className="flex items-start space-x-3">
            <div className="w-10 h-10 bg-gradient-to-r from-purple-600 to-pink-600 rounded-full flex items-center justify-center flex-shrink-0">
              <span className="text-white font-bold text-sm">B</span>
            </div>
            <div>
              <h3 className="font-semibold text-gray-800">Welcome to Bilpchat!</h3>
              <p className="text-gray-600 text-sm mt-1">
                Browse posts from the blurt.blog community. Sign up to create your own posts and interact!
              </p>
            </div>
          </div>
        </div>

        {/* Posts Feed */}
        <div className="space-y-6">
          {posts.map((post) => (
            <div key={post.id} className="bg-white rounded-2xl shadow-sm border border-gray-200 p-6 hover:shadow-md transition-shadow">
              <div className="flex space-x-4">
                <div className="flex-shrink-0">
                  <img
                    src={post.avatar}
                    alt={post.username}
                    className="w-12 h-12 rounded-full cursor-pointer hover:opacity-80 transition-opacity"
                  />
                </div>
                <div className="flex-1">
                  <div className="flex items-center space-x-2 mb-2">
                    <span className="font-bold hover:underline cursor-pointer">{post.username}</span>
                    {post.verified && (
                      <div className="w-5 h-5 bg-blue-500 rounded-full flex items-center justify-center">
                        <svg className="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
                          <path fillRule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clipRule="evenodd" />
                        </svg>
                      </div>
                    )}
                    <span className="text-gray-500 text-sm">{post.handle}</span>
                    <span className="text-gray-500 text-sm">·</span>
                    <span className="text-gray-500 text-sm">{post.time}</span>
                  </div>
                  
                  <p className="text-gray-800 mb-3 leading-relaxed">{post.content}</p>
                  
                  {post.image && (
                    <div className="mb-3 rounded-2xl overflow-hidden cursor-pointer hover:opacity-90 transition-opacity">
                      <img
